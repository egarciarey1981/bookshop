{
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Bookshop\\": "src/Bookshop/"
        }
    },
    "require": {
        "monolog/monolog": "^2.9",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.6",
        "slim/slim": "4.*"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpmd/phpmd" : "@stable",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "3.*",
        "infection/infection": "^0.27.8"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
